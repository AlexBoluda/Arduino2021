//********************************** VARIABLES ************************************
const byte xiulet = 9;            // donar nom al pin 9 de l’Arduino
unsigned long temps = 20;         // definir un temps en ms

//*********************************** SETUP ***************************************
void setup()
{
  pinMode(xiulet, OUTPUT);        // definir el pin 9 com una sortida
}

//************************************ LOOP ***************************************
void loop()
{
  tone(xiulet, 1000, temps);      // xiulet de durada "temps"
  tone(xiulet, 1250, temps);      // xiulet de durada "temps"
}

