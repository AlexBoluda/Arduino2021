//********************************** VARIABLES ************************************
int taula = 2;

//*********************************** SETUP ***************************************
void setup()
{
  Serial.begin(9600);
  
  Serial.print("Taula de multiplicar del ");
  Serial.println(taula);
  for (int i=0; i <= 10; i++)
  {
    delay(100);
    
    Serial.print(taula);
    Serial.print(" x ");
    Serial.print(i);
    Serial.print( " = ");
    Serial.println(taula*i);    
  }
}

